<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF7F7">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_page_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/image_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/post_page_picture"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorAccent" />


                <TextView
                    android:id="@+id/vacancy_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:text="Title"
                    android:textColor="#fff"
                    android:textSize="25sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_rel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vacancy_page_description"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:padding="6dp"
                    android:text="NodeJS,JS" />
                <TextView
                    android:id="@+id/vacancy_page_experience"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/vacancy_page_description"
                    android:backgroundTint="@color/colorAccent"
                    android:padding="6dp"
                    android:text="5 years" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_below="@id/post_page_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <TextView
            android:id="@+id/vacancy_page_candidates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Candidates"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/vacancy_page_candidates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vacancy_page_rv"
            android:footerDividersEnabled="true"
            android:background="@android:color/transparent" />
    </RelativeLayout>
</RelativeLayout>
