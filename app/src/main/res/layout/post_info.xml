<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:padding="2dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/post_f_name_and_l_name"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Name and surname"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_skills"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="JS"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignBottom="@+id/post_f_name_and_l_name"
            android:layout_centerHorizontal="true"
            android:paddingRight="10dp"
            />
        <ImageButton
            android:id="@+id/post_info_image_button"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp"
            android:src="@drawable/ic_icons8_email_send_64"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>

