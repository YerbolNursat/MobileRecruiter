<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF7F7">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_page_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/image_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/post_page_picture"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorAccent" />


                <TextView
                    android:id="@+id/post_page_name_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:text="Name Surname"
                    android:textColor="#fff"
                    android:textSize="25sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_rel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_page_skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:text="NodeJS,JS"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="3dp"/>
                <TextView
                    android:drawablePadding="3dp"
                    android:layout_below="@id/post_page_skills"
                    android:layout_width="wrap_content"
                    android:id="@+id/post_page_mail"
                    android:layout_height="wrap_content"
                    android:text="mail"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:drawablePadding="3dp"
                    android:layout_below="@+id/post_page_mail"
                    android:id="@+id/post_page_telephon_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87475595354"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:minHeight="50px"
                    android:autoSizeMinTextSize="10sp"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_below="@id/post_page_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal"
            android:id="@+id/three_buttons">

            <Button
                android:id="@+id/post_page_button_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Call"
                android:textColor="#537072"
                android:background="@drawable/roundedbutton"
                app:backgroundTint="@android:color/transparent"
                android:strokeColor="@color/colorAccent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/post_page_button_add_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Comment"
                android:background="@drawable/roundedbutton"
                android:textColor="#537072"
                app:backgroundTint="@android:color/transparent"
                android:strokeColor="@color/colorAccent"
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:id="@+id/post_page_button_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Message"
                android:background="@drawable/roundedbutton"
                android:textColor="#537072"
                app:backgroundTint="@android:color/transparent"
                android:strokeColor="@color/colorAccent"/>
        </LinearLayout>

        <TextView
            android:layout_below="@+id/three_buttons"
            android:id="@+id/post_page_recent_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Recent Comments"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/post_page_recent_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/post_page_rv"
            android:footerDividersEnabled="true"
            android:background="@android:color/transparent" />
    </RelativeLayout>

</RelativeLayout>
