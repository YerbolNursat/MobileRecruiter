<?xml version="1.0" encoding="UTF-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_swipe"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</LinearLayout>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="2dp">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginStart="15dp">

    <TextView android:layout_height="60dp" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#F1463B" android:text="ФИО, E-mail: " android:gravity="center" android:fontFamily="@font/lobster" android:id="@+id/message_info_from_description"/>

    <TextView android:layout_height="60dp" android:layout_width="match_parent" android:textSize="18sp" android:textColor="#162946" android:text="from email" android:gravity="center" android:id="@+id/message_info_from"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginStart="15dp">

    <TextView android:layout_height="60dp" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#F1463B" android:text="Дата отправки: " android:gravity="center" android:fontFamily="@font/lobster" android:id="@+id/message_date_description"/>

    <TextView android:layout_height="20dp" android:layout_width="wrap_content" android:layout_marginStart="60dp" android:textSize="18sp" android:textColor="#162946" android:text="26.02.12" android:id="@+id/message_date" android:layout_below="@+id/message_info_from"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginStart="15dp">

    <TextView android:layout_height="60dp" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#F1463B" android:text="Резюме: " android:gravity="center" android:fontFamily="@font/lobster" android:id="@+id/message_subject_description"/>

    <TextView android:layout_height="20dp" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#162946" android:text="CV" android:id="@+id/message_subject" android:layout_below="@+id/message_date" android:paddingLeft="150dp"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginStart="15dp">

    <TextView android:layout_height="60dp" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#F1463B" android:text="Ссылка: " android:gravity="center" android:fontFamily="@font/lobster" android:id="@+id/message_filename_description"/>

    <TextView android:layout_height="20dp" android:layout_width="wrap_content" android:textSize="18sp" android:textColor="#162946" android:text="cv.pdf" android:id="@+id/message_filename" android:layout_below="@+id/message_subject" android:paddingLeft="150dp"/>

</LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>
</com.daimajia.swipe.SwipeLayout>